{
  "importMap": "./import_map.json",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read index.ts"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["**/*.ts"]
  },
  "fmt": {
    "include": ["**/*.ts"],
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true
  }
}
