{
  "expo": {
    "name": "MuhsinAI",
    "slug": "MuhsinAI",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/png/logo.png",
    "scheme": "muhsinai",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.muhsinai.app",
      "buildNumber": "1"
    },
    "android": {
      "package": "com.muhsinai.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/png/logo.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/png/logo.png",
      "bundleIdentifier": "com.muhsinai.web",
      "name": "MuhsinAI - AI-Powered Islamic Prayer Plans",
      "shortName": "MuhsinAI",
      "description": "Transform your spiritual practice with AI-generated personalized Islamic prayer plans. Get daily guidance, track your progress, and deepen your connection with Allah.",
      "lang": "en",
      "dir": "auto",
      "orientation": "any",
      "startUrl": "/",
      "display": "standalone",
      "backgroundColor": "#0F1419",
      "themeColor": "#2E4A35",
      "crossorigin": "anonymous",
      "scope": "/",
      "preferRelatedApplications": false,
      "relatedApplications": [],
      "icons": [
        {
          "src": "./assets/images/png/logo.png",
          "sizes": "192x192",
          "type": "image/png"
        },
        {
          "src": "./assets/images/png/logo.png", 
          "sizes": "512x512",
          "type": "image/png"
        }
      ],
      "categories": ["lifestyle", "productivity", "spirituality"],
      "screenshots": [],
      "meta": {
        "apple-mobile-web-app-capable": "yes",
        "apple-mobile-web-app-status-bar-style": "black-translucent",
        "apple-mobile-web-app-title": "MuhsinAI",
        "mobile-web-app-capable": "yes",
        "msapplication-TileColor": "#2E4A35",
        "msapplication-config": "none"
      }
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/png/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0F1419",
          "dark": {
            "backgroundColor": "#0F1419"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
